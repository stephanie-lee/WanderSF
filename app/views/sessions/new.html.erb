<h3 class="center">Sign In</h3>

<div class="sign-in-box center">
  <div class="row col-xs-4 col-xs-offset-4">
    <form class="" action="<%= session_url %>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <input type="email" class="form-control" name="user[email]" value="" placeholder="email">
      </div>

      <div class="form-group">
        <input type="password" class="form-control" name="user[password]" value="" placeholder="password">
      </div>

      <button type="submit" class="btn btn-lg btn-primary">Submit</Button>
    </form>

    <p>New user? <%= link_to "Sign up now!", new_user_url %></p>
  </div>
</div>
